<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">
    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">
        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/profile_group"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin">
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_profile" />

        <TextView
            android:id="@+id/profile_option"
            style="@style/TextView.GuillotineItem"
            android:text="Profile" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/about_group"
        style="@style/LinearLayout.GuillotineItem">
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/about" />
        <TextView
            android:id="@+id/about_option"
            style="@style/TextView.GuillotineItem"
            android:text="About Us" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/feed_group"
        style="@style/LinearLayout.GuillotineItem">
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_feed" />
        <TextView
            android:id="@+id/feed_option"
            style="@style/TextView.GuillotineItem"
            android:text="Feed" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/event_group"
        style="@style/LinearLayout.GuillotineItem">
        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/events" />

        <TextView
            android:id="@+id/events_option"
            style="@style/TextView.GuillotineItem"
            android:text="Events" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contact_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/contact" />

        <TextView
            android:id="@+id/contact_option"
            style="@style/TextView.GuillotineItem"
            android:text="Contact Us" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gallery_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/gallery" />

        <TextView
            android:id="@+id/gallery_option"
            style="@style/TextView.GuillotineItem"
            android:text="Gallery" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/log_out_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            android:layout_width="38dp"
            android:layout_height="38dp"
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/icn_close" />

        <TextView
            android:id="@+id/log_out"
            style="@style/TextView.GuillotineItem"
            android:text="Log Out" />
    </LinearLayout>
</LinearLayout>